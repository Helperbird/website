<div
  class="-mx-4 mt-8 rounded-xl bg-gradient-to-br from-gray-50 to-gray-100/50 px-5 py-3.5 text-sm font-semibold tracking-wide text-gray-900 shadow-[0_1px_3px_rgba(0,0,0,0.04)] first:mt-6"
>
  {{ sectionTitle }}
</div>
<dl class="mt-4 space-y-1">
  {%- for feature in features -%}
  <div class="grid grid-cols-2 gap-4 border-b border-gray-100/60 py-3.5 last:border-none transition-colors hover:bg-gray-50/30 rounded-lg -mx-2 px-2">
    <dt class="text-sm font-normal text-gray-700 leading-relaxed">
      {{ feature.feature }}
    </dt>
    <dd class="text-center">
      {% if feature[plan] == true %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 -960 960 960"
        class="inline-block h-5 w-5 text-emerald-500 drop-shadow-sm transition-transform hover:scale-110"
        fill="currentColor"
        role="img"
        aria-label="Included"
      >
        <title>Included</title>
        <path
          d="m424-296 282-282-56-56-226 226-114-114-56 56 170 170Zm56 216q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"
        />
      </svg>
      <span class="sr-only">Included</span>
      {% else %}
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 -960 960 960"
        fill="currentColor"
        role="img"
        aria-label="Not included"
        class="inline-block h-5 w-5 text-gray-300 transition-transform hover:scale-110"
      >
        <title>Not included</title>
        <path
          d="m336-280 144-144 144 144 56-56-144-144 144-144-56-56-144 144-144-144-56 56 144 144-144 144 56 56ZM480-80q-83 0-156-31.5T197-197q-54-54-85.5-127T80-480q0-83 31.5-156T197-763q54-54 127-85.5T480-880q83 0 156 31.5T763-763q54 54 85.5 127T880-480q0 83-31.5 156T763-197q-54 54-127 85.5T480-80Zm0-80q134 0 227-93t93-227q0-134-93-227t-227-93q-134 0-227 93t-93 227q0 134 93 227t227 93Zm0-320Z"
        />
      </svg>
      <span class="sr-only">Not included</span>
      {% endif %}
    </dd>
  </div>
  {%- endfor -%}
</dl>