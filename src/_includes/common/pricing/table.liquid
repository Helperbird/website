      <th scope="col" class="pb-6 pt-0 px-0">
        <div class="text-center text-lg font-semibold tracking-tight text-gray-900">
          Helperbird <span class="sr-only">plan</span>
        </div>
      </th>
      <th scope="col" class="pb-6 pt-0 px-0">
        <div class="text-center text-lg font-semibold tracking-tight text-rose-600">
          Helperbird Pro <span class="sr-only">plan</span>
        </div>
      </th>
      <th scope="col" class="pb-6 pt-0 px-0">
        <div class="text-center text-lg font-semibold tracking-tight text-indigo-600">
          Pro Unlimited <span class="sr-only">plan</span>
        </div>
      </th>
    </tr>
  </thead>

  {%- include common/pricing/components/pricing-section.liquid, sectionTitle: "Reading Options", features: pricing.text -%}
