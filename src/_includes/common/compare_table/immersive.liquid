<div class="flex flex-col max-w-4xl mx-auto" id="compare">
    <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
            <div class="shadow overflow-hidden border-b shadow-md sm:rounded-xl">
                <table class="w-full divide-y divide-stone-200">
                    <thead class="bg-white">
                        <tr>
                            <th
                                class="
                                    px-6
                                    py-3
                                    text-left text-lg
                                    font-black
                                    text-black 
                                    uppercase
                                    tracking-wider
                                "
                                scope="col"
                            >
                                Features
                            </th>
                            <th
                                class="
                                    px-6
                                    py-3
                                    text-left text-lg
                                    font-medium
                                      text-black 
                                    uppercase
                                    tracking-wider
                                "
                                scope="col"
                            >
                                <img
                                    alt="The Helperbird logo, depicting a stylized owl with large, round yellow eyes and a beige face. The owl has brown accents for its feathers and horns, and a distinct pattern on its forehead resembling a crown. Set against a green background with a subtle striped pattern."
                                    loading="lazy"
                                    src="/assets/images/pwa/logo/full.png"
                                    width="60px"
                                />
                            </th>
                            <th
                                class="
                                    px-6
                                    py-3
                                    text-left text-lg
                                    font-medium
                                      text-black 
                                    uppercase
                                    tracking-wider
                                "
                                scope="col"
                            >
                            <img 
  loading="lazy" 
  src="/assets/images/compare/menu/microsoft.png" 
  alt="Clickable icon of Microsoft Windows logo, comprised of four panes in different colors, indicating an option to choose Microsoft-related features in the menu" 
  width="60px" 
/>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-stone-200">


                        {%- for list in compare.immersive -%}


                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="leading-relaxed font-sans  text-black font-bold text-lg">{{ list.feature }}</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="leading-relaxed font-sans  text-black  text-center">

                                    {% if list.helperbird == true %}

                                        <svg
                                            fill="none"
                                            stroke="green"
                                            viewbox="0 0 24 24"
                                            width="30px"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                            ></path>
                                        </svg>

                                    {% endif %}

                                    {% if list.helperbird == false %}
                                        <svg
                                            fill="none"
                                            stroke="red"
                                            viewbox="0 0 24 24"
                                            width="30px"
                                            xmlns="http://www.w3.org/2000/svg"
                                        >
                                            <path
                                                d="M6 18L18 6M6 6l12 12"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="2"
                                            ></path>
                                        </svg>

                                    {% endif %}
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-center">
                                <div class="leading-relaxed font-sans  text-black  text-center">
                                    {% if list.other == true %}

                                    <svg
                                        fill="none"
                                        stroke="green"
                                        viewbox="0 0 24 24"
                                        width="30px"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <path
                                            d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                        ></path>
                                    </svg>

                                {% endif %}

                                {% if list.other == false %}
                                    <svg
                                        fill="none"
                                        stroke="red"
                                        viewbox="0 0 24 24"
                                        width="30px"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <path
                                            d="M6 18L18 6M6 6l12 12"
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                        ></path>
                                    </svg>

                                {% endif %}
                                </div>
                            </td>
                        </tr>

                        {%- endfor -%}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>