{% assign updated = page.inputPath | mtime %}
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">

  <head>
    <meta charset="utf-8" />
    <title>{{ title }} - Helperbird Blog</title>
    {% bundledCss %}
    <script>
      if ("serviceWorker" in navigator) {
        navigator.serviceWorker.register("/service-worker.js");
      }
    </script>

    <link href="https://www.helperbird.com{{ page.url | safe }}" rel="canonical" />
    <meta name="description" content="{{ description }}" />
    <meta name="keywords" content="{{ keywords }}" />

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="image" content="/assets/images/favicon.png" />
    <meta name="theme-color" content="#5046e4" />
    <meta itemprop="name" content="Helperbird" />
    <meta itemprop="description" content="{{ description }}" />
    <meta itemprop="image" content="/assets/images/favicon.png" />

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@helperbird">
    <meta name="twitter:creator" content="@robertjgabriel">
    <meta name="twitter:title" content="{{ title }} - Helperbird">
    <meta property="twitter:domain" content="helperbird.com" />
    <meta property="twitter:url" content="https://www.helperbird.com{{ page.url | safe }}" />
    <meta name="twitter:description" content="{{ description }}">
    <meta name="twitter:image:alt" content="Helperbird promo art with text saying visit Helperbird" />
    <meta name="twitter:image" content="https://www.helperbird.com{{ page.url | safe }}index.png" />
    <meta name="twitter:player" content="https://www.youtube.com/watch?v={{ youtubeId}}" />

    <meta property="og:type" content="article">
    <meta property="og:title" content="{{ title }} - Helperbird">
    <meta property="og:url" content="https://www.helperbird.com{{ page.url | safe }}">
    <meta property="og:image" content="https://www.helperbird.com{{ page.url | safe }}index.png" />
    <meta property="og:description" content="{{ description }}">
    <meta property="article:author" content="Robert James Gabriel">
