    <link href="/assets/images/social/apple-touch-icon.png" rel="apple-touch-icon" />
    <link href="/assets/images/favicon.png" rel="apple-touch-icon" sizes="152x152" />
    <link href="/assets/images/favicon.png" rel="apple-touch-icon" sizes="180x180" />
    <link href="/assets/images/favicon.png" rel="apple-touch-icon" sizes="167x167" />
    
    <meta content="5A7359B55CCBDE2A927000280EAECBBC" name="msvalidate.01" />
    <link href="/assets/images/social/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180" />
    <link href="/assets/images/social/favicon-32x32.png" rel="icon" sizes="32x32" type="image/png" />
    <link href="/assets/images/social/favicon-16x16.png" rel="icon" sizes="16x16" type="image/png" />
    <link href="/assets/images/social/site.webmanifest" rel="manifest" />
    <link href="/assets/images/social/safari-pinned-tab.svg" rel="mask-icon" />
    <link href="/assets/images/social/favicon.ico" rel="shortcut icon" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="msapplication-config" content="assets/images/social/browserconfig.xml" />



    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "SoftwareApplication",
        "name": "Helperbird",
        "operatingSystem": ["Chrome", "Windows", "MacOS"],
        "applicationCategory": "UtilitiesApplication",
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "4.7",
          "ratingCount": "147"
        },
        "offers": {
          "@type": "Offer",
          "price": "6.99",
          "priceCurrency": "USD"
        }
      }
    </script>
    
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Helperbird",
        "url": "https://www.helperbird.com",
        "sameAs": [
          "https://www.facebook.com/helperbird",
          "https://www.linkedin.com/company/19112429",
          "https://twitter.com/helperbird",
          "https://www.youtube.com/helperbird"
        ],
        "logo": "https://www.helperbird.com/assets/images/pwa/logo/full.png"
      }
    </script>
    
    <script type="application/ld+json">
      {
        "@context": "https://schema.org/",
        "@type": "Product",
        "name": "Helperbird",
        "image": "https://www.helperbird.com/assets/images/pwa/logo/full.png",
        "description": "Helperbird is your all-in-one extension that gives you the features to make the web more accessible and make you more productive. Providing you features like annotations, text to speech, ad removal, dyslexia support, dictation, immersive reader, overlays, Reading Mode, and much more.",
        "brand": "Helperbird",
        "sku": "helperbird2016",
        "gtin": "helperbird2016",
        "offers": {
          "@type": "Offer",
          "url": "https://www.helperbird.com/pricing/",
          "priceCurrency": "USD",
          "price": "30",
          "priceValidUntil": "2026-12-31",
          "availability": "https://schema.org/OnlineOnly",
          "itemCondition": "https://schema.org/NewCondition"
        },
        "aggregateRating": {
          "@type": "AggregateRating",
          "ratingValue": "5",
          "bestRating": "5",
          "worstRating": "1",
          "ratingCount": "2",
          "reviewCount": "2"
        },
        "review": [
          {% for review in reviews.reviews %}
          {
            "@type": "Review",
            "name": "{{ review.name }}",
            "reviewBody": "{{ review.review }}",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5",
              "bestRating": "5",
              "worstRating": "1"
            },
            "datePublished": "{{ review.date }}",
            "author": {
              "@type": "Person",
              "name": "{{ review.name }}"
            },
            "publisher": {
              "@type": "Organization",
              "name": "App store"
            }
          }{% if not loop.last %},{% endif %}
          {% endfor %},
          {
            "@type": "Review",
            "name": "Robert James Gabriel",
            "reviewBody": "I know I founded it but this is amazing.",
            "reviewRating": {
              "@type": "Rating",
              "ratingValue": "5",
              "bestRating": "5",
              "worstRating": "1"
            },
            "datePublished": "2025-01-01",
            "author": {
              "@type": "Person",
              "name": "Robert James Gabriel"
            },
            "publisher": {
              "@type": "Organization",
              "name": "App store"
            }
          }
        ]
      }
    </script>

    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BlogPosting",
        "headline": "{{ title }}",
        "description": "{{ description }}",
        "author": {
          "@type": "Person",
          "name": "Robert James Gabriel",
          "url": "https://twitter.com/RobertJGabriel"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Helperbird",
          "logo": {
            "@type": "ImageObject",
            "url": "https://www.helperbird.com/assets/images/pwa/logo/full.png"
          }
        },
        "datePublished": "{{ date }}",
        "dateModified": "{{ updated }}",
        "mainEntityOfPage": {
          "@type": "WebPage",
          "@id": "{{ url }}"
        }
      }
    </script>



  </head>

<body class="base-helperbird bg-base-helperbird">
  <div id="helperbird-website">
    {% include templates/header.liquid %}

    <main class="mx-auto max-w-7xl px-6 pt-12 pb-12" id="content">
      <div class="mx-auto max-w-3xl">
        <article aria-labelledby="article-title">
          <header class="flex flex-col">
            <!-- Back Button -->
            <div class="flex gap-4">
              <a
                href="/blog/"
                aria-label="Go back to articles"
                class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-zinc-100 text-zinc-700 shadow-md ring-1 ring-zinc-200 transition-all duration-200 hover:bg-zinc-200 hover:shadow-lg hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2"
              >
                <svg
                  viewBox="0 0 16 16"
                  fill="none"
                  aria-hidden="true"
                  stroke="currentColor"
                  class="h-5 w-5"
                  stroke-width="1.5"
                >
                  <path
                    d="M7.25 11.25 3.75 8m0 0 3.5-3.25M3.75 8h8.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  ></path>
                </svg>
              </a>
            </div>

            <!-- Article Title -->
            <h1 
              id="article-title" 
              class="mt-8 text-3xl font-bold tracking-tight text-zinc-900 sm:text-4xl lg:text-5xl"
            >
              {{ cardTitle }}
            </h1>

            <!-- Divider -->
            <hr class="mt-8 border-zinc-200" />

            <!-- Meta Information -->
            <div class="mt-6 flex flex-wrap items-center justify-between gap-4">
              <div class="flex flex-wrap items-center gap-2">
                <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-700 ring-1 ring-blue-200">
                  {{name}}
                </span>
                <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-700 ring-1 ring-blue-200">
                  {{time}}
                </span>
              </div>
              <time 
                datetime="{{date | formatDateWithOrdinal}}" 
                class="inline-flex items-center rounded-full bg-zinc-100 px-3 py-1 text-xs font-semibold text-zinc-700 ring-1 ring-zinc-200"
              >
                {{date | formatDateWithOrdinal}}
              </time>
            </div>
          </header>

          <!-- Featured Image -->
          <div class="mt-10">
            <div class="overflow-hidden rounded-2xl shadow-xl ring-1 ring-zinc-200">
              <img
                src="{{img}}"
                alt="{{name}}"
                class="aspect-square w-full object-cover transition-transform duration-500 hover:scale-105"
                title="{{name}}"
                loading="eager"
              />
            </div>

            <!-- Article Content -->
            <div class="prose prose-zinc mt-12 max-w-none prose-headings:font-bold prose-headings:tracking-tight prose-h2:text-2xl prose-h2:text-zinc-900 prose-h3:text-xl prose-h3:text-zinc-900 prose-p:text-zinc-700 prose-p:leading-relaxed prose-a:font-medium prose-a:text-blue-600 prose-a:underline prose-a:decoration-blue-600/30 prose-a:underline-offset-2 prose-a:transition-colors hover:prose-a:text-blue-700 hover:prose-a:decoration-blue-700 prose-strong:text-zinc-900 prose-code:rounded-md prose-code:bg-zinc-100 prose-code:px-1 prose-code:py-0.5 prose-code:text-zinc-900 prose-code:before:content-none prose-code:after:content-none prose-pre:rounded-xl prose-pre:bg-zinc-900 prose-pre:shadow-lg prose-img:rounded-xl prose-img:shadow-md">
              {{ content | safe }}
            </div>
          </div>
        </article>
      </div>

      {% include templates/new/cta/download.html %}
    </main>

    {% include templates/footer.liquid %}
  </div>
  {% bundledJs %}
</body>
</html>