  <body>
    <div id="helperbird-website" style="background-color: rgb(246, 245, 231)">
      {% include templates/header.html %}


      <main class="mx-auto max-w-7xl my-8 mb-10">


        <div class="relative pt-6 pb-16 sm:pb-24 lg:pb-32">
          <main class="mx-auto mt-16 max-w-7xl px-4 sm:mt-24 sm:px-6 lg:mt-16">
            <div class="lg:grid lg:grid-cols-12 lg:gap-8">

              <div class="sm:text-center md:mx-auto md:max-w-2xl lg:col-span-6 lg:text-left">
                <h1 class="mt-1 block text-4xl font-extrabold tracking-tight sm:text-4xl xl:text-5xl">


                  <span class="text-2xl text-pink-600">
                    Helperbird feature
                  </span>

                  <span class="block text-gray-900">
                    {{
                       featurePageTitle }}</span>

                </h1>
                <p class="mt-3 text-base text-black sm:mt-5 sm:text-xl lg:text-lg xl:text-xl">
                  {{ featureDescription }}
                </p>
                <div class="mt-6 flex gap-6">
                  <button
                    role="button"
                    class="group btn btn-secondary inline-flex items-center justify-center border-2 border-stone-600 py-2 px-4"
                    @click="handleModal">
                    Download Now</button>
                  <a class="btn-base group btn btn-ghost inline-flex items-center justify-center  border-2  border-stone-600 py-2 px-4" href="/features/">
                    <span>All features</span>
                  </a>
                </div>

              </div>
              <div class="relative mt-12 sm:mx-auto sm:max-w-lg lg:col-span-6 lg:mx-0 lg:mt-0 lg:flex lg:max-w-none lg:items-center">
                <div class="relative mx-auto w-full rounded-xl shadow-lg lg:max-w-xl">
                  <video
                    autoplay="autoplay"
                    control="control"
                    loop="loop"
                    muted="muted"
                    playsinline="playsinline"
                    class="rounded-xl">
                    <source src="/assets/videos/new/dyslexia.webm" type="video/webm" />
                    <source src="/assets/videos/styles.mp4" type="video/mp4" />
                  </video>
                </div>
              </div>
            </div>
          </main>
        </div>


        <div class="mt-12">

          <div class="relative px-4">
            <div class="mx-auto max-w-2xl lg:max-w-7xl">
              <div class="mx-auto grid grid-cols-1 gap-y-20 lg:grid-cols-3" style="column-gap: 3rem;">
                <div class="flex flex-col gap-16 rounded-2xl card bg-white border-stone-600 border-2 p-6 lg:col-span-2 lg:pr-16 xl:pr-24">
                  <article class="mt-6 space-y-7 text-base text-black">

                    {{ content | safe }}

                  </article>

                </div>
                <div class="space-y-10  lg:col-span-1">
                  <div class="rounded-2xl  card bg-whit border-stone-600 border2 p-6">
                    <h2 class="mt-2 text-2xl font-extrabold tracking-tight text-gray-900 mb-8">
                      Video
                    </h2>
                    <div class="max-w-xs px-2.5 lg:max-w-none">


                      <div class="aspect-w-16 aspect-h-9">
                        <iframe
                          class="aspect-square  rounded-2xl bg-zinc-100"
                          width="560"
                          height="315"
                          src="https://www.youtube.com/embed/{{img}}"
                          title="YouTube video player"
                          frameborder="0"
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen></iframe>
                      </div>

                    </div>


                  </div>
                  <div class="rounded-2xl  card bg-whit border-stone-600 border2 p-6">


                    <h2 class="mt-2 text-2xl font-extrabold tracking-tight text-gray-900">
                      More features
                    </h2>

                    <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-12 ">
                      {%- for post in collections.features limit: 1 -%}


                        <div class="card border-stone-600 border-2  bg-white rounded-3xl">

                          <div class="card-body">
                            <div class=" btn btn-circle btn-error no-animation text-white">
                              {{ post.data.icon | svgContents | safe }}
                            </div>

                            <h3 class="text-xl font-medium text-black mb-2">{{ post.data.cardTitle }}</h3>
                            <p class="mt-2 text-base text-black mb-10">{{ post.data.featureDescription }}</p>
                            <div class="card-actions justify-end">
                              <a
                                class="btn-base btn  border-stone-600 border-2"
                                href="{{ post.url }}"
                                title="More information on feature {{ post.data.cardTitle  }}">
                                Discover more
                              </a>
                            </div>
                          </div>
                        </div>


                      {%- endfor -%}

                      <a
                        href="/features"
                        class="btn-base btn   border-stone-600 border-2 btn-wide w-full "
                        title="More information on feature {{ post.data.cardTitle  }}">
                        See all features
                      </a>
                    </div>


                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>


      </main>


      {% include templates/footer.html %}
    </div>
  </body>
