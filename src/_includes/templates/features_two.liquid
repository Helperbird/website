  <body>
    <div id="helperbird-website" style="background-color: rgb(246, 245, 231)">
      {% include templates/header.html %}

      <div class="relative isolate overflow-hidden bg-gradient-to-b from-yellow-100/20 bg-white">
        <div class="mx-auto max-w-7xl pt-10 pb-24 sm:pb-32 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:py-40 lg:px-8">
          <div class="px-6 lg:px-0 lg:pt-4">
            <div class="mx-auto max-w-2xl">
              <div class="max-w-lg">
                <h1 class="leading-relaxed font-sans  900 mt-10 text-4xl font-bold   text-black sm:text-6xl">

                  <span>
                    {{
                       featurePageTitle }}</span>
                </h1>
                <p class="leading-relaxed font-sans  600 mt-6 text-xl leading-8 text-black">
                  {{ featureDescription }}</p>
                <div class="mt-10 flex items-center gap-x-6">
                  <label for="my-modal-6" class="group btn btn-secondary inline-flex items-center justify-center border-2 border-stone-600 py-2 px-4">
                    <span class="sr-only">Try for free</span>
                    Get the app
                  </label>

                  <a class="btn-outline btn text-lg font-bold leading-7 text-black hover:text-yellow-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-yellow-500" href="/features/">
                    <span>All features</span>
                  </a>
                </div>
              </div>
            </div>
          </div>
          <div class="mt-20 sm:mt-24 md:mx-auto md:max-w-2xl lg:mx-0 lg:mt-0 lg:w-screen">
            <div
              class="absolute inset-y-0 right-1/2 -z-10 -mr-10 w-[200%] skew-x-[-30deg]  shadow-xl shadow-yellow-500/10 ring-1 ring-yellow-50 md:-mr-20 lg:-mr-36"
              aria-hidden="true"
              style="background-color: rgb(246, 245, 231);"></div>
            <div class="shadow-lg md:rounded-3xl">
              <div class="bg-yellow-500 [clip-path:inset(0)] md:[clip-path:inset(0_round_theme(borderRadius.3xl))]">
                <div class="absolute -inset-y-px left-1/2 -z-10 ml-10 w-[200%] skew-x-[-30deg] bg-yellow-100 opacity-20 ring-1 ring-inset ring-white md:ml-20 lg:ml-36" aria-hidden="true"></div>
                <div class="relative px-6 pt-8 sm:pt-16 md:pl-16 pb-16 md:pr-0">
                  <div class="mx-auto max-w-2xl md:mx-0 md:max-w-none">
                    <video
                      autoplay="autoplay"
                      control="control"
                      loop="loop"
                      muted="muted"
                      playsinline="playsinline"
                      class="rounded-xl">
                      <source src="/assets/videos/new/dyslexia.webm" type="video/webm" />
                      <source src="/assets/videos/styles.mp4" type="video/mp4" /></video>
                  </div>
                  <div class="pointer-events-none absolute inset-0 ring-1 ring-inset ring-black/10 md:rounded-3xl" aria-hidden="true"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="absolute inset-x-0 bottom-0 -z-10 h-24 bg-gradient-to-t from-white sm:h-32"></div>
      </div>

      <main class="mx-auto max-w-7xl my-8 mb-10">


        <div class="mt-12">

          <div class="relative px-4">
            <div class="mx-auto max-w-2xl lg:max-w-7xl">
              <div class="mx-auto grid grid-cols-1 gap-y-20 lg:grid-cols-3" style="column-gap: 3rem;">
                <div class="flex flex-col gap-16 rounded-2xl card bg-white border-stone-600 border-2 p-6 lg:col-span-2 lg:pr-16 xl:pr-24">
                  <article class="mt-6 space-y-7 text-base text-black">

                    {{ content | safe }}

                  </article>

                </div>
                <div class="space-y-10  lg:col-span-1">
                  <div class="rounded-2xl  card bg-whit border-stone-600 border2 p-6">
                    <h2 class="leading-relaxed font-sans  mt-2 text-2xl font-extrabold   text-gray-900 mb-8">
                      Video
                    </h2>
                    <div class="max-w-xs px-2.5 lg:max-w-none">


                      <div class="aspect-w-16 aspect-h-9">
                        <iframe
                          class="aspect-square  rounded-2xl bg-zinc-100"
                          width="560"
                          height="315"
                          src="https://www.youtube.com/embed/{{img}}"
                          title="YouTube video player"
                          frameborder="0"
                          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen></iframe>
                      </div>

                    </div>


                  </div>
                  <div class="rounded-2xl  card bg-whit border-stone-600 border2 p-6">


                    <h2 class="leading-relaxed font-sans  mt-2 text-2xl font-extrabold   text-gray-900">
                      More features
                    </h2>

                    <div class="mt-4 grid grid-cols-1 gap-x-6 gap-y-12 ">
                      {%- for post in collections.features limit: 1 -%}


                        <div class="card border-stone-600 border-2  bg-white rounded-3xl">

                          <div class="card-body">
                            <div class=" btn btn-circle btn-error no-animation text-white">
                              {{ post.data.icon | svgContents | safe }}
                            </div>

                            <h3 class="leading-relaxed font-sans  leading-relaxed font-sans  text-xl font-medium text-black mb-2">{{ post.data.cardTitle }}</h3>
                            <p class="leading-relaxed font-sans  mt-2 text-base text-black mb-10">{{ post.data.featureDescription }}</p>
                            <div class="card-actions justify-end">
                              <a
                                class="btn-base btn  border-stone-600 border-2"
                                href="{{ post.url }}"
                                title="More information on feature {{ post.data.cardTitle  }}">
                                Discover more
                              </a>
                            </div>
                          </div>
                        </div>


                      {%- endfor -%}

                      <a
                        href="/features"
                        class="btn-base btn   border-stone-600 border-2 btn-wide w-full "
                        title="More information on feature {{ post.data.cardTitle  }}">
                        See all features
                      </a>
                    </div>


                  </div>
                </div>
              </div>
            </div>
          </div>

        </div>


      </main>


      {% include templates/footer.html %}
    </div>
  </body>
  {% bundledJs %}

