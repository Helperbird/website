<div class="px-6 py-20 sm:py-16 lg:px-4 mb-4">
  <div class="mx-auto max-w-4xl text-center">
    <h2 class="leading-relaxed font-sans text-4xl font-bold text-black sm:text-6xl">What’s new in Helperbird</h2>
    <p class="leading-relaxed font-sans mt-6 text-2xl text-black">
      Stay up-to-date with the latest Helperbird developments right here.
    </p>
  </div>
</div>


<div class="max-w-7xl mx-auto p-4 py-12 sm:p-6 sm:pt-16 sm:pb-20 lg:pt-18 lg:p-8">
  {%- for update in updates.new -%}
    <section id="{{ update.version }}" aria-labelledby="{{ update.version }}-heading" class="md:flex">
      <h2 id="{{ update.version }}-heading" class="text-xl font-bold text-black md:w-1/4 md:pr-12 md:text-right">
        <a href="#{{ update.version }}" title="Learn more about Helperbird version {{ update.version }} updates and features">
          Helperbird 
          <span class="badge badge-secondary ml-2">{{ update.version }}</span>
          <span class="badge badge-primary ml-2">{{ update.date }}</span>
        </a>
      </h2>
      
      <div class="relative pt-2 md:w-3/4 md:pt-0 pb-16">
        <div class="absolute bottom-0 left-0 w-px bg-stone-500 -top-3 md:top-2.5"></div>
        <div class="absolute -left-1 -top-4 h-2 w-2 rounded-full border-2 border-stone-500 bg-white md:top-1.5"></div>
        <div class="bg-white rounded-xl shadow-md mb-4 p-8">
          <div class="mb-4">
            <h3 class="text-lg font-bold mb-8">Changes</h3>
            {%- for change in update.changes -%}
              <div class="mt-3 text-lg text-black">
                <span class="badge badge-secondary mr-2">New</span>
                <span class="font-semibold">{{ change.title }}</span>
                <p class="ml-4 mt-2 mb-8 text-base">{{ change.description }}</p>
              </div>
            {%- endfor -%}
          </div>
          <div class="mb-3 mt-8">
            <h3 class="text-lg font-bold mb-8">Fixes</h3>
            {%- for fix in update.fixes -%}
              <div class="mt-3 text-lg text-black">
                <span class="badge badge-primary mr-2">Fix</span>
                <span class="font-semibold">{{ fix.title }}</span>
                <p class="ml-4 mt-2 mb-8 text-base">{{ fix.description }}</p>
              </div>
            {%- endfor -%}
          </div>
          {%- if update.upcoming -%}
            <div class="mb-3 mt-8">
              <h3 class="text-lg font-bold mb-8">Upcoming</h3>
              {%- for upcoming in update.upcoming -%}
                <div class="mt-3 text-lg text-black">
                  <span class="badge badge-warning mr-2">Upcoming</span>
                  <span class="font-semibold">{{ upcoming.title }}</span>
                  <p class="ml-4 mt-2 mb-8 text-base">{{ upcoming.description }}</p>
                </div>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    </section>
  {%- endfor -%}
</div>
