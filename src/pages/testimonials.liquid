<!-- Testimonials Header -->
<div class="px-6 py-20 sm:py-16 lg:px-4 mb-8">
  <div class="mx-auto max-w-4xl text-center">
    <h1 class="text-4xl font-bold tracking-tight text-zinc-900 sm:text-5xl lg:text-6xl">
      Customer Testimonials
    </h1>
    
    <!-- Rating Display -->
    <div class="mt-8 inline-flex items-center divide-x divide-zinc-200 text-2xl">
      <div class="flex flex-shrink-0 gap-1 pr-5" aria-label="5 star rating">
        {%- for star in (1..5) -%}
          <svg
            aria-hidden="true"
            fill="currentColor"
            viewBox="0 0 20 20"
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 text-amber-400 transition-transform duration-200 hover:scale-110"
            role="img"
          >
            <title>Star {{ star }}</title>
            <path
              d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
            ></path>
          </svg>
        {%- endfor -%}
      </div>
      <div class="flex-1 py-1 pl-5 text-sm font-semibold uppercase tracking-wide text-zinc-700 sm:py-3 sm:text-base">
        Rated 4.9 stars by over 1,000,000 people.
      </div>
    </div>

    <p class="mt-6 text-xl leading-relaxed text-zinc-600 sm:text-2xl">
      Discover what more than 1,000,000 satisfied users think about Helperbird.
    </p>
  </div>
</div>

<!-- Testimonials Grid -->
<section class="relative mx-auto max-w-7xl px-4 py-16 sm:px-6 md:px-8 lg:px-4">
  <div class="grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3 lg:gap-10">
    {%- for review in reviews.reviews -%}
      <article class="group">
        <figure class="relative h-full rounded-2xl bg-white p-6 shadow-md ring-1 ring-zinc-100 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl">
          <!-- Quote -->
          <blockquote class="relative">
            <svg 
              class="absolute -top-2 -left-2 h-8 w-8 text-zinc-200" 
              fill="currentColor" 
              viewBox="0 0 32 32" 
              aria-hidden="true"
            >
              <path d="M9.352 4C4.456 7.456 1 13.12 1 19.36c0 5.088 3.072 8.064 6.624 8.064 3.36 0 5.856-2.688 5.856-5.856 0-3.168-2.208-5.472-5.088-5.472-.576 0-1.344.096-1.536.192.48-3.264 3.552-7.104 6.624-9.024L9.352 4zm16.512 0c-4.8 3.456-8.256 9.12-8.256 15.36 0 5.088 3.072 8.064 6.624 8.064 3.264 0 5.856-2.688 5.856-5.856 0-3.168-2.304-5.472-5.184-5.472-.576 0-1.248.096-1.44.192.48-3.264 3.456-7.104 6.528-9.024L25.864 4z" />
            </svg>
            <p class="relative text-base leading-relaxed text-zinc-900 sm:text-lg">
              {{ review.review }}
            </p>
          </blockquote>

          <!-- Author Info -->
          <figcaption class="relative mt-6 flex items-center justify-between border-t border-zinc-200 pt-6">
            <div class="flex-1">
              <div class="font-semibold text-zinc-900">
                {{ review.name }}
              </div>
              <div class="mt-1 text-sm text-zinc-600">
                {{ review.title }}
              </div>
            </div>
            <div class="ml-4 flex-shrink-0 overflow-hidden rounded-full shadow-md ring-2 ring-zinc-100 transition-transform duration-200 group-hover:scale-105">
              <img
                alt="{{ review.name }}"
                src="{{ review.photo }}"
                width="56"
                height="56"
                decoding="async"
                class="h-14 w-14 object-cover"
                loading="lazy"
              />
            </div>
          </figcaption>
        </figure>
      </article>
    {%- endfor -%}
  </div>
</section>