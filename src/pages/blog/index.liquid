    {% for post in sortedBlogPosts offset:1 %}
      <a href="{{ post.url }}" title="Read more about {{ post.data.cardTitle }}" class="card card-compact border-2 border-stone-400 bg-base-100 transition-all duration-200 hover:-translate-y-1 focus-within:border focus-within:border-indigo-500">
        <figure class="p-4">
          <img src="{{ post.data.img }}" alt="{{ post.data.cardTitle }} - Image" class="aspect-[16/9] w-full rounded-lg bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
          <figcaption class="sr-only">{{ post.data.cardTitle }}</figcaption>
        </figure>
        <div class="p-4">
