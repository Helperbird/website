<!-- Stories Grid -->
<div class="mx-auto mt-16 mb-16 grid max-w-2xl grid-cols-1 gap-8 lg:mx-0 lg:max-w-none md:grid-cols-3 lg:grid-cols-4 lg:gap-10">
  {%- for post in collections.usecase -%}

    <article class="group">
      <a 
        class="block rounded-2xl bg-white p-5 shadow-md ring-1 ring-zinc-100 transition-all duration-300 hover:-translate-y-2 hover:shadow-xl focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-blue-600 focus-visible:ring-offset-2" 
        href="{{ post.url }}"
        aria-label="Read {{ post.data.cardTitle }} customer story"
        title="Read {{ post.data.cardTitle }} customer story"
      >
        <!-- Image Container -->
        <div class="overflow-hidden rounded-xl shadow-md transition-transform duration-300 group-hover:shadow-lg">
          <img 
            src="{{ post.data.img }}" 
            alt="{{ post.data.cardTitle }}" 
            class="aspect-[16/9] w-full rounded-xl bg-zinc-100 object-cover transition-transform duration-300 group-hover:scale-105 sm:aspect-[2/1] lg:aspect-[3/2]" 
            loading="lazy"
          />
        </div>

        <!-- Story Title -->
        <h3 class="mt-5 text-lg font-semibold tracking-tight text-zinc-900 transition-colors duration-200 group-hover:text-blue-600 lg:text-xl">
          {{ post.data.cardTitle }}
        </h3>

        <!-- Story Description -->
        <p class="mt-2 line-clamp-3 text-sm leading-relaxed text-zinc-600 lg:text-base">
          {{ post.data.blog_snip }}
        </p>

        <!-- Category Badge -->
        <div class="mt-4 flex items-center gap-x-4">
          <span class="inline-flex items-center rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-700 transition-colors duration-200 group-hover:bg-blue-200">
            {{ post.data.blog_cat }}
          </span>
        </div>
      </a>
    </article>

  {%- endfor -%}
</div>

